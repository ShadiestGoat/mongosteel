{
  "compilerOptions": {
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "target": "ES6",
    "resolveJsonModule": true,
    "outDir": "./dist/esm/",
    "declarationDir": "./dist/types",
    "checkJs": true,
    "module": "ESNext",
    "strictNullChecks": true,
    "removeComments": false,
    "declaration": true,
    "skipLibCheck": true,
    "lib": ["es2017", "es7", "es6"]
  },
  "include": [
      "lib/**/*.ts",
      "index.ts"
  ],
}
